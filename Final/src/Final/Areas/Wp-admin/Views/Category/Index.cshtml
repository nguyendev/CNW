@model IEnumerable<Final.Models.BlogCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Wp-admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        List Categorory
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Manager</a></li>
        <li class="">Category Manager</li>
        <li class="active">ListCategory</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">

                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="box box-primary">
                                <div class="box-header with-border">
                                    <h3 class="box-title">List</h3>
                                    <span class="label label-success pull-right"><i class="fa fa-search-plus"></i></span>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                    @if (Model.Count() == 0)
                                    {
                                        <p> Not Category</p>
                                    }
                                    else
                                    {
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.CategoryName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.CategoryDes)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.OrderNo)
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                               
                                               
                                                <tr>
                                                    <td class="col-sm-3">
                                                        @Html.DisplayFor(modelItem => item.CategoryName)
                                                    </td>
                                                    <td class="col-sm-4">
                                                        @Html.DisplayFor(modelItem => item.CategoryDes)
                                                    </td>
                                                    <td class="col-sm-2">
                                                        @Html.DisplayFor(modelItem => item.OrderNo)
                                                    </td>
                                                    <td class="col-sm-3">
                                                        <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-id="@item.CategoryId">Edit</a>
                                                        <a asp-action="Details" class="btn btn-sm btn-primary" asp-route-id="@item.CategoryId">Details</a>
                                                        <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.CategoryId">Delete</a>
                                                    </td>
                                                </tr>
                                            
                                            }
                                        </tbody>
                                    </table>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>