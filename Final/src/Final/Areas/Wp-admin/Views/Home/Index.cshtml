                    <h3>@Model.Post.Count()</h3>
                    <p>Post</p>
                </div>
                <div class="icon">
                    <i class="icon ion-compose"></i>
                </div>
                <a href="/wp-admin/post/index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-3 col-xs-6">
