@{
    ViewData["Title"] = "Dashboard admin";

}
@model Final.Areas.Wp_admin.ViewModels.DashboardViewModels
<section class="content-header">
    <h1>
       
        
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i></a></li>
        <li></li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>@Model.Post.Count()</h3>
                    <p>Post</p>
                </div>
                <div class="icon">
                    <i class="icon ion-compose"></i>
                </div>
                <a href="/wp-admin/post/index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-orange">
                <div class="inner">
                    <h3>@Model.Cateogory.Count()</h3>
                    <p>Category</p>
                </div>
                <div class="icon">
                    <i class="icon ion-android-list"></i>
                </div>
                <a href="/Home/Staff/StaffInfo/Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>@Model.CountUser</h3>
                    <p>User</p>
                </div>
                <div class="icon">
                    <i class="icon ion-person-add"></i>
                </div>
                <a href="/Home/Staff/StaffInfo/Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>@Model.CountManager</h3>
                    <p>Manager</p>
                </div>
                <div class="icon">
                    <i class="icon ion-android-person"></i>
                </div>
                <a href="/Home/Staff/StaffInfo/Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div><!-- ./col -->
    </div>
    <div class="row">
        <div class="col-md-6">
            <!-- USERS LIST -->
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">Lastest Member</h3>
                    <div class="box-tools pull-right">
                        <span class="label label-danger">New Manager</span>
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body no-padding">
                    <ul class="users-list clearfix">
                        @foreach (var user in Model.Member.Take(4))
                        {
                            <li>
                                <img src=@user.ImageURL1 alt="User Image">
                                <a class="users-list-name" href="#">@user.UserName</a>
                            </li>
                        }
                    </ul><!-- /.users-list -->
                </div><!-- /.box-body -->
                <div class="box-footer text-center">
                    <a href="javascript::" class="uppercase">Xem toàn bộ</a>
                </div><!-- /.box-footer -->
            </div><!--/.box -->
        </div><!-- /.col -->
        </div>
</section>  