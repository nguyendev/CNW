@model IEnumerable<Final.Models.BlogPost>

@{
    ViewData["Title"] = "Index Post";
    Layout = "~/Areas/Wp-admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Index
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Manager</a></li>
        <li class="active">Post Manager</li>
        <li class="activi">Create</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">

                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="box box-primary">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Unapproved</h3>
                                    <span class="label label-primary pull-right"><i class="fa fa-info"></i></span>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <table class="table table-bordered table-hove table-responsive text-center">
                                        @if (Model.Count() == 0)
                                        {
                                            <tr><td colspan="4" class="text-center">Not Exits</td></tr>
                                        }
                                        else
                                        {
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.URL)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Content)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Category.CategoryName)
                                                </th>
                                                
                                                <th></th>
                                            </tr>

                                            @foreach (var item in Model)
                                            {   @if (item.Auth_status == "U")
                                                {
                                                         <tr> 
                                                             <td class="col-sm-2">
                                                                 @Html.DisplayFor(modelItem => item.URL)
                                                             </td>
                                                             <td class="col-sm-5">
                                                                 @Html.DisplayFor(modelItem => item.Content)
                                                             </td>
                                                             <td class="col-sm-2">
                                                                 @Html.DisplayFor(modelItem => item.Category.CategoryName)
                                                             </td>
                                                             <td class="col-sm-3 text-center">
                                                                 <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                                                                 <a asp-action="Details" class="btn btn-sm btn-success" asp-route-id="@item.ID">Details</a>
                                                                 <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.ID">Delete</a>
                                                             </td>
                                                        </tr>
                                            }
                                            }   
                                        }
                                    </table>
                                </div>
                            </div>
                            <div class="box box-success">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Approved</h3>
                                    <span class="label label-success pull-right"><i class="fa fa-comment"></i></span>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <table class="table table-bordered table-hove table-responsive" style="text-align: justify">
                                    @if (Model.Count() == 0)
                                    {
                                        <tr><td colspan="4" class="text-center">Not Exits</td></tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <th class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.URL)
                                            </th>
                                            <th class="col-sm-5">
                                                @Html.DisplayNameFor(model => model.Content)
                                            </th>
                                            <th class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.Category.CategoryName)
                                            </th>

                                            <th class="col-sm-3"></th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            @if (item.Auth_status != "U")
                                            {
                                            <tr>
                                                <td class="col-sm-2">
                                                    @Html.DisplayFor(modelItem => item.URL)
                                                </td>
                                                <td class="col-sm-5">
                                                    @Html.DisplayFor(modelItem => item.Content)
                                                </td>
                                                <td class="col-sm-2">
                                                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                                                </td>
                                                <td class="col-sm-3 text-center">
                                                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                                                        <a asp-action="Details" class="btn btn-sm btn-success" asp-route-id="@item.ID">Details</a>
                                                        <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.ID">Delete</a>
                                                </td>
                                            </tr>
                                            }
                                        }
                                    }
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>