@model IEnumerable<Microsoft.AspNetCore.Identity.EntityFrameworkCore.IdentityRole>
<section class="content-header">
    <h1>
        Danh sách phân quyền
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Quản trị</a></li>
        <li>Quản lý phân quyền</li>
        <li class="active">Danh sách phân quyền</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <a class="btn btn-sm btn-primary pull-left" asp-action="Create">Tạo</a>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="box box-primary">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Danh sách phân quyền</h3>
                                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                    <span class="label label-success pull-right"><i class="fa fa-search-plus"></i></span>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                    <table id="example2" class="table table-bordered table-hover">
                                            <tr><th>Tên quyền</th><th>Thành viên</th><th></th></tr>
                                            @if (Model.Count() == 0)
                                            {
                                                <tr><td colspan="4" class="text-center">Không có thành viên nào cần phân quyền</td></tr>
                                            }
                                            else
                                            {
                                                foreach (var role in Model)
                                                {
                                                    <tr>
                                                        <td>@role.Name</td>
                                                        <td identity-role="@role.Id"></td>
                                                        <td>
                                                            <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                                                <a class="btn btn-sm btn-primary" asp-action="Edit"
                                                                   asp-route-id="@role.Id">Edit</a>
                                                                <button type="submit"
                                                                        class="btn btn-sm btn-danger">Delete</button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
